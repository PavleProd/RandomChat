<Window x:Class="RandomChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomChat"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Border BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>

            <DockPanel>
                <Button Grid.Row="0" Height="25" Width="125"
                HorizontalAlignment="Left"
                Content="Connect" Margin="25,0,0,0"/>
            </DockPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="Send"/>
            </Grid>
        </Grid>
    </Border>
    
</Window>
