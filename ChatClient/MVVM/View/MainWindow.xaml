<Window x:Class="RandomChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Border BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <TextBox Height="25" Width="125"
                    HorizontalAlignment="Left" Margin="25,0,0,0"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
               
                <Button Height="25" Width="125"
                HorizontalAlignment="Left"
                Content="Connect" 
                Command="{Binding ConnectToServerCommand}"/>

                <Button Height="25" Width="125" Margin="0,0,25,0"
                        HorizontalAlignment="Right"
                        Content="Disconnect"
                        Command="{Binding DisconnectFromServerCommand}" />
            </DockPanel>

            <StackPanel Grid.Column="1">
                <ListView ItemsSource="{Binding Messages}"/>
            </StackPanel>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.8*"/>
                    <ColumnDefinition Width="0.2*"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" VerticalContentAlignment="Center"/>
                <Button Grid.Column="1" Content="Send"/>
            </Grid>
        </Grid>
    </Border>
    
</Window>
